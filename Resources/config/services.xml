<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="lopi_pusher.pusher" class="Pusher">
            <argument>%lopi_pusher.key%</argument>
            <argument>%lopi_pusher.secret%</argument>
            <argument>%lopi_pusher.app.id%</argument>
            <argument type="collection">
                <argument key="host">%lopi_pusher.host%</argument>
                <argument key="port">%lopi_pusher.port%</argument>
                <argument key="timeout">%lopi_pusher.timeout%</argument>
                <argument key="fireandforget">%lopi_pusher.fireandforget%</argument>
                <argument key="debug">%lopi_pusher.debug%</argument>
            </argument>
        </service>

    </services>
</container>
